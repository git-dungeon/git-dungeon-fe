{
  "name": "@git-dungeon/embed-renderer",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json --emitDeclarationOnly true && tsup src/index.ts src/browser.ts src/server.ts --format esm,cjs --splitting false",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "satori": "^0.18.3"
  },
  "dependencies": {},
  "devDependencies": {},
  "typesVersions": {
    "*": {
      "browser": [
        "./dist/browser.d.ts"
      ],
      "server": [
        "./dist/server.d.ts"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  }
}
